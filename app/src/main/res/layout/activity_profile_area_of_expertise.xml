<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="false">

    <TextView
        android:id="@+id/tvAreaOfExpertiseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Edit Area Of Expertise"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="356dp"
        android:layout_height="597dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:chipSpacingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAreaOfExpertiseTitle"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipScience"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Science"
            android:textSize="10sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTechnology"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Technology"
            android:textSize="10sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEngineering"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Engineering"
            android:textSize="10sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEducation"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Quality Education"
            android:textSize="10sp" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAreaOfExpertiseTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>